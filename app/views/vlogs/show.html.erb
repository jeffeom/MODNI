          <div id="comments">
          <%# @post.comments.each do |comment| %>
          <%# this will render _answer.html.erb inside views/answers folder %>
          <%#= render "/comments/comment", comment: comment %>
          <%# end %>
        </div> -->
        <% end %>
      </div>
    </div>
</section>
