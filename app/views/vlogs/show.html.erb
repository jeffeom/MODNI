<div class="text-center wrapper" id="startchange">
  <img src="/assets/home.jpg" alt="Home" width="100%" style="display: inline-block" class="img">
</div>

<section class="col-md-10 center-block" id="vlog-skip">
  <div style="float: right">
    <%# if @vlog.next %>
      <%#= link_to "<i class='fa fa-arrow-right fa-3x'></i>".html_safe, @vlog.next %>
    <%# end %>
  </div>
  <div style="float: right; margin-right: 10px">
    <%# if @vlog.previous %>
      <%#= link_to "<i class='fa fa-arrow-left fa-3x'></i>".html_safe, @vlog.previous %>
    <%# end %>
  </div>
  <div style="float: left; padding-top: 3px">
    <%#= link_to '<i class="fa fa-th fa-3x"></i>'.html_safe, vlogs_path %>
  </div>
  <br>
  <br>
  <br>
</section>


<section class="col-md-12" id="vlog-title">
  <div class="col-md-12" style="text-align: center; margin-bottom: 50px">
    <h1 style="font-weight: 800; font-size: 50px"><%= @vlog.title %></h1>
    <% if @vlog.vlog_date %>
      <h2 style="font-weight: 600; color: red; opacity: 0.8; font-size: 20px"><%= @vlog.vlog_date.strftime("%A, %B %d %Y @ %I:%M%p") %></h2>
    <% end %>
  </div>
</section>

<section class="col-md-10 center-block" id="image-body">
  <div class="col-md-3 center-block well right" style="display: inline-block;">
    <p style="font-weight: 600; opacity: 0.8"><%= @vlog.body %></p>
  </div>
  <section id="edit-delete">
    <%# if user_signed_in? && @post.user == current_user %>
    <%= link_to "Edit", edit_vlog_path(@vlog),
        class: "btn btn-info btn-sm edit-right"%>
    <%= link_to "Delete", vlog_path(@vlog), method: :delete,
        class: "btn btn-danger btn-sm delete-right", data: {confirm: "Are you use you want to delete this vlog?"} %>
    <%# end %>
  </section>
</section>

<section id="comments">
  <div class="col-md-10 center-block">
    <div style="clear: left">
      <br>
      <br>
      <hr>
      <h2>Leave a Comment</h2>

      <%#= render "/comments/form" %>

      <% if @vlog.comments.present?%>
      <h2>Comments</h2>
