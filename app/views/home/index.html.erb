<% if @events.present? %>
<section id="events">
  <div class="col-md-10 center-block">
    <h2 style="clear: left; padding-top: 5%; margin-bottom: 10%; text-align:center; font-size: 50px; font-weight: 900">Recent<br />Events</h2>
      <% @events.order("created_at desc").first(2).each do |event| %>
        <div class="col-md-6 grow post1" style="padding: 10px; height: 400px; margin-right: 0px;">
          <div class="col-md-3 cover-left date text-center" style="display: inline-block">
            <% if event.event_date %>
              <p><%= event.event_date.strftime("%B %dth")%></p>
            <% end %>
          </div>
          <div class="col-md-9 cover-right">
            <div style="display: block; font-weight: 900">
              <%= link_to event.title, event_path(event) %>
            </div>
            <hr style="margin-bottom: 0; margin-top: 30px;">
            <br>
          </div>
          <div class="text-center">
            <% if event.image.present? %>
              <% image = image_tag(event.image.url(:large), :class=> "event_cover") %>
              <%= link_to image, event_path(event) %>
            <% else %>
              <div class="no-image">
                <span>Image Cannot be Found</span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
</section>
<% end %>

<% if @vlogs.present? %>
<section id="vlog"style="clear: left; margin-bottom: 5%;">
  <div class="col-md-10 center-block">
    <h2 style="clear: left; padding-top: 5%; margin-bottom: 10%; font-size: 50px; font-weight: 900; text-align: center">Recent<br />Vlogs</h2>
    <% @vlogs.order("created_at desc").first(2).each do |vlog| %>
      <div class="col-md-6 grow post2" style="height: 350px; margin-right: 0px; margin-bottom: 10%;">
        <div class="col-md-3 cover-left date text-center" style="display: inline-block">
          <% if vlog.vlog_date %>
            <p><%= vlog.vlog_date.strftime("%B %dth")%></p>
          <% end %>
        </div>
        <div class="col-md-9 cover-right">
          <div style="display: block; font-weight: 900">
            <%= link_to vlog.title, vlog_path(vlog) %>
          </div>
          <hr style="margin-bottom: 0; margin-top: 30px;">
          <br>
        </div>
        <div class="text-center embed-container center-block" style="float: right; margin-right: 5%; width: 100%">
          <% if vlog.link.present? %>
            <%= embed(vlog.link) %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</section>
<% end %>
</div>
