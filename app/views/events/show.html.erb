<div class="text-center wrapper" id="startchange">
  <img src="/assets/event_crop.jpg" alt="Home" width="100%" style="display: inline-block" class="img">
</div>

<section class="col-md-10 center-block" id="event-skip" style="margin-top: 5%;">
  <div style="float: right">
    <% if @event.next %>
      <%= link_to "<i class='fa fa-arrow-right fa-3x'></i>".html_safe, @event.next %>
    <% end %>
  </div>
  <div style="float: right; margin-right: 10px">
    <% if @event.previous %>
      <%= link_to "<i class='fa fa-arrow-left fa-3x'></i>".html_safe, @event.previous %>
    <% end %>
  </div>
  <div style="float: left; padding-top: 3px">
    <%= link_to '<i class="fa fa-th fa-3x"></i>'.html_safe, events_path %>
  </div>
  <br>
  <br>
  <br>
</section>


<section class="col-md-10 center-block" id="event-title">
  <div style="text-align: center; margin-bottom: 50px">
    <h1 style="font-weight: 800; font-size: 50px"><%= @event.title %></h1>
    <% if @event.event_date %>
      <h2 style="font-weight: 600; color: red; opacity: 0.8; font-size: 20px"><%= @event.event_date.strftime("%A, %B %d %Y @ %I:%M%p") %></h2>
    <% end %>
  </div>
</section>

<section class="col-md-10 center-block" id="image-body">
  <div class="col-md-8 col-xs-12 text-center" style="margin-bottom: 5%; padding: 0;">
    <% if @event.image.present? %>
      <%= image_tag(@event.image.url(:large), :class=> "event_image") %>
    <% else %>
      <div class="no-image">
        <span>Image Cannot be Found</span>
      </div>
    <% end %>
  </div>
  <section style="text-align: right;">
    <div class="col-md-4 col-xs-12 center-block well" style="display: inline-block;">
      <p style="font-weight: 600; opacity: 0.8; text-align: left;"><%= @event.body %></p>
    </div>
    <section id="edit-delete" style="margin-bottom: 5%;">
      <%# if user_signed_in? && @post.user == current_user %>
      <%= link_to "Edit", edit_event_path(@event),
          class: "btn btn-info btn-sm edit-right"%>
      <%= link_to "Delete", event_path(@event), method: :delete,
          class: "btn btn-danger btn-sm delete-right", data: {confirm: "Are you sure you want to delete this event?"} %>
      <%# end %>
    </section>
  </section>
</section>
